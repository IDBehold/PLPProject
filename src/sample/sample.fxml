<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<GridPane fx:controller="sample.Controller"
          fx:id="GridPane"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <VBox fx:id="imageContainer" maxHeight="-Infinity" minHeight="401.0" minWidth="401.0" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Label fx:id="ErrorMessages" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextArea fx:id="InputField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Button fx:id="submit" GridPane.rowIndex="1" GridPane.columnIndex="1" onAction="#submit">Submit</Button>
</GridPane>
